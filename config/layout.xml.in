<layout>
    
    <!-- Menus here -->
    <menu title="Media">
    
        <entry title="Kodi">
            <command>kodi</command>
            <card>
                <icon>assets/icons/kodi4.webp</icon>
                <background>#000000</background>
            </card>
        </entry>
        
        <entry title="Plex">
            <command>plexmediaplayer</command>
            <card>
                <icon>assets/icons/plex2.png</icon>
                <background>#313138</background>
            </card>
        </entry>

        <entry title="Netflix">
            <command>netflix</command>
            <card>
                <icon>assets/icons/netflix.svg</icon>
                <background>#FFFFFF</background>
            </card>
        </entry>
        
        <entry title="YouTube">
            <command>youtube</command>
            <card>
                <icon>assets/icons/youtube.svg</icon>
                <background>#FFFFFF</background>
            </card>
        </entry>
        
        <entry title="Jellyfin">
            <command>jellyfinmediaplayer</command>
            <card>
                <icon>assets/icons/jellyfin.svg</icon>
                <background>#000B25</background>
            </card>
        </entry>  
    </menu>

    <menu title="Games">
    
        <entry title="Steam">
            <command>steam</command>
            <card>
                <icon>assets/icons/steam2.svg</icon>
                <background>#000000</background>
            </card>
        </entry>
        
        <entry title="RetroArch">
            <command>retroarch</command>
            <card>
                <icon>assets/icons/retroarch.png</icon>
                <background>#0000FF</background>
            </card>
        </entry>

    </menu>

    <!-- Sidebar commands here -->
    <command title="Sleep">:sleep</command>
    <command title="Restart">:restart</command>
    <command title="Shutdown">:shutdown</command>

</layout>
 
